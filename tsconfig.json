{
    "compilerOptions": {
        "module": "NodeNext",
        "esModuleInterop": true,
        "target": "ESNext",
        "moduleResolution": "NodeNext",
        "allowJs": true,
        "outDir": "dist",
        "strict": true
    },
    "watchOptions": {
        "excludeDirectories": ["dist", "node_modules", "test"],
        "excludeFiles": ["**/*.test.ts"]
    },
    "include": ["src/**/*"]
}
